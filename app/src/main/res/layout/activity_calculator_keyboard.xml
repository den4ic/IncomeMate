<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:alignmentMode="alignBounds"
            app:useDefaultMargins="false"
            app:columnCount="5"
            app:rowCount="5">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisionBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="รท" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sevenBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eightBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nineBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="9" />

            <ImageButton
                android:id="@+id/backspaceImgBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:scaleType="center"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:src="@drawable/ic_baseline_backspace_24" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplicationBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="ร" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fourBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fiveBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sixBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="6" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resultBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_gravity="fill_vertical"
                grid:layout_rowSpan="3"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:padding="8dp"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="="/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/subtractionBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="-" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oneBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/twoBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/threeBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="3" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/additionBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="+" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zeroBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                grid:layout_columnSpan="2"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/commaBtn"
                android:gravity="center"
                app:layout_gravity="fill_horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                android:background="@drawable/btn_number_calculator"
                android:textSize="30sp"
                android:text="," />


        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</LinearLayout>